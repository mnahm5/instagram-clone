<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.mnahm5.instagram_clone.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ivLogo"
        android:background="@drawable/logo"
        />

    <Button
        android:text="@string/create_new_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btRegisterLink"
        android:layout_below="@+id/btLoginLink"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="RegisterLink" />

    <Button
        android:text="@string/use_existing_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btLoginLink"
        android:layout_below="@+id/ivLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="LoginLink" />

</RelativeLayout>
